{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["server/*"]
    },
    "typeRoots": ["./node_modules/*/node_modules/@types/"]
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "@types/node",
    "@nuxt/types"
  ]
}